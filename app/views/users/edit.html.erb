<% provide(:title, "Account") %>
<header>
    <h3>Account settings</h3>
</header>

<%= form_for(@user) do |f| %>
    <%= render 'fields', f: f %>
    <%= f.submit "Save changes", class: "button expand" %>
<% end %>
<p id="account-last-p" data-no-turbolink>
    <strong>Subscription end date:</strong> <%= @user.expiration_date.to_date.to_formatted_s(:long) %><br>
    <%= link_to "Export your data", opml_export_path %><br>
    <%= link_to "Delete your account", current_user, method: :delete, data: { confirm: "Are you sure you want to delete your account?" } %>
</p>
