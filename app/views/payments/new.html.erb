<div class="row payment-container simple-container">
  <div class="small-11 medium-7 small-centered columns box">
    <header>
      <h3>Become a subscriber</h3>
    </header>

    <p>Keep using FeedSpin <%= 'after your trial period' if @user.stripe_subscription_status.nil? %> for <strong><%= number_to_currency(@price) %>/month</strong>.</p>

    <%= form_with url: payments_path do |f| %>
      <%= f.submit 'Continue to checkout', class: 'button radius expanded', data: { disable_with: 'Please wait...' } %>
    <% end %>
  </div>
</div>
