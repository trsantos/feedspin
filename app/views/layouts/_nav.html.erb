<div id="app-header">
    <%= content_tag :header, class: "contain-to-grid fixed" + in_feeds_show do %>
	<nav class="top-bar" data-topbar data-options="is_hover: false" data-no-turbolink>
	    <ul class="title-area">
		<li class="name">
		    <% if logged_in? %>
			<h1><%= link_to "Reader", next_path, id: "logo" %></h1>
		    <% else %>
			<h1><%= link_to "Reader", root_path, id: "logo" %></h1>
		    <% end %>
		</li>
		<li class="toggle-topbar menu-icon">
		    <a href="#"><span></span></a>
		</li>
	    </ul>
	    <section class="top-bar-section">
		<ul class="right">
		    <% if logged_in? %>
			<% if current_user.admin? %>
			    <li><%= link_to "Users", users_path %></li>
			    <li><%= link_to "Feeds", feeds_path %></li>
			    <li class="divider"></li>
			<% end %>
			<li><%= link_to "Subscriptions", subscriptions_path %></li>
			<li><%= link_to "Add feed", new_feed_path %>
			    <li class="has-dropdown">
				<%= link_to current_user.name.split.first, '#' %>
				<ul class="dropdown">
				    <li><%= link_to "Profile", current_user %></li>
				    <li><%= link_to "Settings", edit_user_path(current_user) %></li>
				    <li class="divider"></li>
				    <li><%= link_to "Log out", logout_path, method: "delete" %></li>
				</ul>
			    </li>
		    <% else %>
			    <li><%= link_to "About",  about_path %></li>
			    <li><%= link_to "Log in", login_path %></li>
		    <% end %>
		</ul>
	    </section>
	</nav>
    <% end %>
</div>
