<div id="app-header" class="<%= in_feeds_show || @river ? "show-for-medium-up" : "" %>">
    <nav class="top-bar" data-topbar>
	<ul class="title-area">
	    <li class="name">
		<h1>
		    <%= link_to image_tag('logo_nav.png'), river_path, id: 'logo' %>
		</h1>
	    </li>
	    <li class="toggle-topbar menu-icon">
		<a href="#"><span></span></a>
	    </li>
	</ul>
	<section class="top-bar-section">
	    <ul class="right">
		<li class="show-for-medium-up"><%= link_to "New feed", new_feed_path %></li>
		<li class="show-for-medium-up"><%= link_to "Subscriptions", subscriptions_path %></li>
		<li class="active show-for-small-only">
		    <%= link_to "Back to reading", next_path %>
		</li>
		<li class="has-dropdown">
		    <%= link_to current_user.name.split.first, '#' %>
		    <ul class="dropdown">
			<li class="divider show-for-small-only"></li>
			<li class="show-for-small-only"><%= link_to "Subscriptions", subscriptions_path %></li>
			<li class="divider show-for-small-only"></li>
			<li><%= link_to "Topics", current_user %></li>
			<li class="divider show-for-small-only"></li>
			<li><%= link_to "Feedback", feedback_path %></li>
			<li class="divider show-for-small-only"></li>
			<li><%= link_to "Account", edit_user_path(current_user) %></li>
			<li class="divider show-for-small-only"></li>
			<li><%= link_to "Log out", logout_path, method: "delete" %></li>
		    </ul>
		</li>
	    </ul>
	</section>
    </nav>
</div>
