<!DOCTYPE html>
<html>
    <head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%= full_title(yield(:title)) %></title>
		<%= stylesheet_link_tag    'application', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'vendor/modernizr' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
    </head>
    <body>
		<header class="fixed">
			<%= render 'layouts/nav' %>
			<% if in_feeds_show %>
				<%= render partial: 'feeds/header' %>
			<% end %>
		</header>
		<main class="<%= in_feeds_show ? "feeds-show" : "" %>">
			<% flash.each do |message_type, message| %>
				<%= content_tag(:div,
								message,
								class: "alert-box #{message_type}" +
								(in_feeds_show ? " alert-in-feeds-show" : "")) %>
			<% end %>

			<div class="feeds-show-div"></div>

			<div class="row main-content">
				<div class="small-10 small-offset-1">
					<%= yield %>
				</div>
			</div>

			<div class="feeds-show-div"></div>
		</main>

		<% if Rails.env.development? %>
			<% if in_feeds_show %>
				<%= link_to @feed.feed_url, @feed.feed_url, target: "_blank" %>
			<% end %>
			<%= debug(params) if Rails.env.development? %>
		<% end %>

    </body>
</html>
