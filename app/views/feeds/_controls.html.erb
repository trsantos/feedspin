<section id="feed_controls" class="top-bar-section">
    <ul class="right">
	<% if current_user.following?(@feed) %>
	    <% s = current_user.subscriptions.find_by(feed_id: @feed.id) %>
	    <% if s.starred %>
		<li>
		    <%= link_to "Unstar",
		    subscription_path(s, subscription: { starred: false }),
		    method: :patch,
		    remote: true %>
		</li>
	    <% else %>
		<li>
		    <%= link_to "Star",
		    subscription_path(s, subscription: { starred: true }),
		    method: :patch,
		    remote: true,
		    title: "Starred feeds will be displayed first when updated. This is for your must-reads." %>
		</li>
	    <% end %>
	    <li class="divider show-for-small-only"></li>
	    <li>
		<%= link_to "Edit", edit_subscription_path(s) %>
	    </li>
	    <li class="divider show-for-small-only"></li>
	    <li>
		<%= link_to "Unsubscribe",
		subscription_path(s),
		method: :delete,
		remote: true %>
	    </li>
	<% else %>
	    <li>
		<%= link_to "Subscribe",
		subscriptions_path(feed_id: @feed.id),
		method: :post,
		remote: true %>
	    </li>
	<% end %>
	<li class="divider show-for-small-only"></li>
	<li class="active show-for-medium-up">
	    <%= link_to "Next feed", next_path %>
	</li>
	<li class="has-dropdown show-for-small-only">
	    <%= link_to current_user.name.split.first, '#' %>
	    <ul class="dropdown">
		<li class="divider show-for-small-only"></li>
		<li><%= link_to "Subscriptions", subscriptions_path %></li>
		<li class="divider show-for-small-only"></li>
		<li><%= link_to "Topics", current_user %></li>
		<li class="divider show-for-small-only"></li>
		<li><%= link_to "Account", edit_user_path(current_user) %></li>
		<li class="divider show-for-small-only"></li>
		<li><%= link_to "Log out", logout_path, method: "delete" %></li>
	    </ul>
	</li>
    </ul>
</section>
