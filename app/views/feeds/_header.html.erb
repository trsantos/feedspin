<% if size == :small %>
<div class="small-feed-header sticky show-for-small-only">
<% else %>
<div class="feed-header sticky contain-to-grid hide-for-small">
<% end %>
    <nav class="top-bar" data-topbar data-no-turbolink>
	<ul class="title-area">
	    <li class="name">
		<h1>
		    <img src="http://www.google.com/s2/favicons?domain=<%= sub_url(@feed) %>" class="favicon" />
		    <%= link_to sub_title(@feed), sub_url(@feed), id: "feed-title", target: "_blank" %>
		</h1>
	    </li>
	    <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
	</ul>
	<section class="top-bar-section">
	    <ul class="right controls">
	    <% if size == :small %>
		<%= render partial: 'controls', :locals => { :size => :small } %>
	    <% else %>
		<%= render partial: 'controls', :locals => { :size => :large } %>
	    <% end %>
	</section>
    </nav>
</div>
