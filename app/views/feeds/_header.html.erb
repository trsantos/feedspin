<div class="feed-header sticky">
	<nav class="top-bar" data-topbar>
		<ul class="title-area">
			<li class="name">
				<h1>
					<a href="<%= sub_url(@feed) %>" id="feed-title" target="_blank">
						<img id="favicon" src="<%= favicon_for(sub_url(@feed)) %>"/>
						<%= sub_title(@feed) %>
					</a>
				</h1>
			</li>
			<li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
		</ul>
		<section class="top-bar-section">
			<ul class="right controls">
				<%= render 'controls' %>
			</ul>
		</section>
	</nav>
</div>
<script>
$(function() {
	f = $('#favicon');
	// Code is redundant as I'm not decided on behavior
	// f.hide();
	f.load(function() { f.show(); }).error(function () { f.hide(); });
});
</script>
