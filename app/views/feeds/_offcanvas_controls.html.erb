<% if logged_in? %>
    <li><label>Move</label></li>
    <li><%= link_to "Next feed", next_path %></li>

    <li><label>This feed</label></li>
    <% if current_user.following?(@feed) %>
	<% sub = current_user.subscriptions.find_by(feed_id: @feed.id) %>
	<% if sub.starred %>
	    <li><%= link_to "Unstar",
		subscription_path(sub, subscription: { starred: false }),
		method: :patch %></li>
	<% else %>
	    <li><%= link_to "Star",
		subscription_path(sub, subscription: { starred: true }),
		method: :patch %></li>
	<% end %>
	<li><%= link_to "Edit", edit_subscription_path(sub) %></li>
	<li><%= link_to "Unsubscribe", subscription_path(sub), method: :delete %></li>
    <% else %>
	<li><%= link_to "Subscribe", subscriptions_path(feed_id: @feed.id), method: :post %></li>
    <% end %>

    <li><label>Misc</label></li>
    <li><%= link_to "Log out", logout_path, method: "delete" %></li>
<% else %>
    <li><%= link_to "About",  about_path %></li>
    <li><%= link_to "Log in", login_path %></li>
<% end %>
