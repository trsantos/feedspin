<% provide(:title, "New feed") %>

<div class="row simple-container">
    <div class="medium-8 medium-centered large-7 columns box">
	<header>
	    <h3>New feed</h3>
	</header>

	<%= form_for(:feed, url: feeds_path) do |f| %>
	    <%= f.label :feed %>
	    <%= f.text_field :feed_url, autofocus: true %>

	    <%= f.submit "Submit", class: "button radius expand" %>
	<% end %>
    </div>
</div>
