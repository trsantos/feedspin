<article>
    <header>
	<h5>
	    <strong>
		<%= link_to sanitize(entry.title), entry.url, class: "entry-title", target: "_blank" %>
	    </strong>
	</h5>
    </header>
    <div class="row">
	<% if @only_images %>
	    <div class="small-12 columns big-thumb-container">
		<a href="<%= entry.url %>" target="_blank" style="color: #222">
		    <%= image_tag entry.image %>
		</a>
	    </div>
	<% else %>
	    <% if entry.image %>
		<div class="small-12 columns">
		    <div class="small-thumb-container">
			<a href="<%= entry.url %>" target="_blank" style="color: #222">
			    <%= image_tag entry.image %>
			</a>
		    </div>
		    <p class="description">
			<%= sanitize entry.description %>
		    </p>
		</div>
	    <% elsif !entry.description.blank? %>
		<div class="small-12 columns">
		    <p class="description">
			<%= sanitize entry.description %>
		    </p>
		</div>
	    <% end %>
	<% end %>
    </div>
    <p class="timestamp">
	<%= time_ago_in_words(entry.pub_date).capitalize %> ago
    </p>
</article>
