<article id="entry-<%= entry.id %>">
    <header class="title">
	<h5>
	    <strong><%= link_to sanitize(entry.title), entry.url, target: "_blank" %></strong>
	</h5>
    </header>
    <div class="row">
	<% if entry.description.blank? and entry.image? %>
	    <div class="small-12 columns">
		<%= image_tag entry.image, class: "thumb" %>
	    </div>
	<% elsif entry.image %>
	    <div class="medium-3 columns">
		<%= image_tag entry.image, class: "thumb" %>
	    </div>
	    <div class="medium-9 columns">
		<p class="description" id="img-and-desc">
		    <%= sanitize entry.description %>
		</p>
	    </div>
	<% else %>
	    <div class="small-12 columns">
		<p class="description">
		    <%= sanitize entry.description %>
		</p>
	    </div>
	<% end %>
    </div>
    <footer>
	<time datetime="<%= entry.pub_date %>">
	    <small>Posted <%= time_ago_in_words(entry.pub_date) %> ago.</small>
	</time>
    </footer>
</article>
