<article>
    <% if @displaying_river %>
	<div class="river">
	    <a href="<%= feed_path(entry.feed) %>" target="_blank">
		<img src="<%= favicon_for entry.feed.site_url %>" class="favicon"/>
		<small><%= entry.feed.title %></small>
	    </a>
	</div>
    <% end %>
    <header class="entry-title">
	<h5>
	    <%= link_to sanitize(entry.title), entry.url, target: "_blank" %>
	</h5>
    </header>
    <div class="row">
	<% if @only_images %>
	    <div class="small-12 columns">
		<%= image_tag entry.image, class: "big-thumb" %>
	    </div>
	<% else %>
	    <% if entry.image #&& !@displaying_river %>
		<div class="medium-3 columns crop">
		    <%= image_tag entry.image, class: "small-thumb" %>
		</div>
		<div class="medium-9 columns desc-with-img">
		    <p class="description">
			<%= sanitize entry.description %>
		    </p>
		</div>
	    <% else %>
		<div class="small-12 columns">
		    <p class="description">
			<%= sanitize entry.description %>
		    </p>
		</div>
	    <% end %>
	<% end %>
    </div>
    <footer>
	<small><%= time_ago_in_words(entry.pub_date).capitalize %> ago</small>
    </footer>
</article>
