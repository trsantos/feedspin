<article id="entry-<%= entry.id %>">
    <header class="title">
	<h5><strong><%= link_to sanitize(entry.title), entry.url, target: "_blank" %></strong></h5>
    </header>
    <% if entry.description %>
	<p class="description">
	    <%#= sanitize entry.description[0..350], tags: ["a"] %>
	    <%= sanitize entry.description[0..350] %>
	    <% if (entry.description.length > 350) %>
		&hellip;
	    <% end %>
	</p>
    <% end %>
    <footer>
	<time datetime="<%= entry.pub_date %>">
	    <small>Posted <%= time_ago_in_words(entry.pub_date) %> ago.</small>
	</time>
    </footer>
</article>
