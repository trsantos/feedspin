<% provide(:title, "River") %>

<div class="feed-entries">
    <p id="entries-header" class="show-for-large-up">River of News</p>
    <%= render @entries %>
</div>

<%= link_to "Zoom in", next_path, class: "button expand", id: "next" %>
<%= link_to "Reload", river_path, class: "button expand", id: "river" %>

<script>
imgs = document.getElementsByClassName("favicon");
for (var i = 0; i < imgs.length; ++i) {
	imgs[i].onerror = function() {
		this.setAttribute("src", "<%= asset_path('feed-icon-16x16.png') %>");
	};
};
</script>
